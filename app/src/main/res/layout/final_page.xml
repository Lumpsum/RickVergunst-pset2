<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/finalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finalTitle"
        android:textSize="30dp"
        android:padding="10dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/finalStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finalStory"
        android:layout_below="@id/finalTitle"
        android:padding="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finalStory"
        android:layout_centerHorizontal="true"
        android:text="@string/finalButton"
        android:onClick="newRandomStory"
        />

</RelativeLayout>